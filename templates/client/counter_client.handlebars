<button class="btn btn-primary m-2" action="incrementCounter">Increment</button>

<div>
  {{#if (isOdd counter) }}
    <h4 class="bg-primary text-white my-2 p-2">
      Client Odd Value: {{ counter }}
    </h4>
  {{else}}
    <h4 class="bg-secondary text-white my-2 p-2">
      Client Odd Value: {{ counter }}
    </h4>
  {{/if}}
</div>