<div class="row pt-3">
  <div class="col-7">
    {{#if name}}
      <div>
        <h4>Hello {{name}}. You will be {{nextage}} in {{ years }} years.</h4>
      </div>
    {{/if}}
    <div>
      <form action="/form" id="age_form" method="post">
        <div class="my-2">
          <label class="form-label">Name</label>
          <input name="name" class="form-control" value="{{name}}">
        </div>
        <div class="my-2">
          <label class="form-label">Current Age</label>
          <input name="age" class="form-control" value="{{age}}">
        </div>
        <div class="my-2">
          <label class="form-label">Number of Years</label>
          <input name="years" class="form-control" value="{{years}}">
        </div>
        <div class="my-2">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <div class="col-5">
    {{> history }}
  </div>
</div>